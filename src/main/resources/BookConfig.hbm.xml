<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.eraldo.dao.Book" table = "books">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "bookId" type = "int" column = "book_id">
            <generator class="native"/>
        </id>

        <property name = "name" column = "name" type = "string"/>
        <property name = "date" column = "date" type = "date"/>
        <property name = "genre" column = "genre" type = "string"/>
        <property name = "price" column = "price" type = "float"/>
        <property name = "rating" column = "rating" type = "int"/>
        <property name = "nrOfVotes" column = "nr_of_votes" type = "int"/>
        <property name = "photoSource" column = "photo_source" type = "string"/>
        <property name = "author" column = "author" type = "string"/>
        <property name = "description" column = "description" type = "string"/>

    </class>
</hibernate-mapping>